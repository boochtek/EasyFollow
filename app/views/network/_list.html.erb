<% SocialNetworkSite.all.each do |network| %>
  <% @network = network %> <!-- Work around Rails bug 4620 -->
  <div class="cell-wrapper">
  <%=
    if (current_user and current_user.following?(@user)) or (current_user and current_user == @user and @user.accounts[network.name])
      render :partial => 'network/active', :locals => {:network => @network, :user => @user}
    elsif true
      render :partial => 'network/inactive', :locals => {:network => @network, :user => @user}
    else
      render :partial => 'network/featured', :locals => {:network => @network, :user => @user}
    end
  %>
  </div>
<% end %>

